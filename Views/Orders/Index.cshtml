@model IEnumerable<e_commerce.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <div class="orders-header">
        <h2 class="section-title">My Orders</h2>
        <p class="text-muted">Track and manage your orders</p>
    </div>

    <div class="orders-container">
        @if (!Model.Any())
        {
            <div class="empty-state">
                <div class="empty-state-icon">ðŸ“¦</div>
                <h3>No Orders Yet</h3>
                <p>You haven't placed any orders yet.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Start Shopping</a>
            </div>
        }
        else
        {
            @foreach (var order in Model)
            {
                <div class="order-card">
                    <div class="order-header">
                        <div class="order-info">
                            <div class="order-id">Order #@order.Id.Substring(Math.Max(0, order.Id.Length - 8))</div>
                            <div class="order-date">@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</div>
                        </div>
                        <div class="status">
                            <!-- Delivered Badge -->
                            <span class="badge-delivered">Delivered</span>

                            <!-- Refund Status -->
                            @if (order.RefundStatus == "Complete")
                            {
                                <span class="badge-refund-completed">Refund Completed</span>
                            }
                            else if (order.RefundStatus == "Rejected")
                            {
                                <span class="badge-refund-rejected">Refund Rejected</span>
                            }
                            else if (order.RefundRequested)
                            {
                                <span class="badge-refund-awaiting">Refund Awaiting</span>
                            }
                            else
                            {
                                <form asp-action="RequestRefund" method="post" style="display: inline;">
                                    <input type="hidden" name="orderId" value="@order.Id" />
                                    <button type="submit" class="btn btn-danger">Refund Request</button>
                                </form>
                            }
                        </div>
                    </div>

                    <div class="order-items-preview">
                        @foreach (var item in order.Items)
                        {
                            <div class="order-item">
                                <span class="item-name">@item.ProductName</span>
                                <span class="item-quantity">x@(item.Quantity)</span>
                                <span class="item-price">$@item.TotalPrice.ToString("F2")</span>
                            </div>
                        }
                    </div>

                    <div class="order-summary">
                        <div class="order-total">
                            Total Amount: <strong>$@order.TotalAmount.ToString("F2")</strong>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .orders-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 1rem;
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
    }

    .empty-state-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .order-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .order-id {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .order-date {
        font-size: 0.9rem;
        color: #666;
    }

    .status {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .badge-delivered,
    .badge-refund-completed,
    .badge-refund-rejected,
    .badge-refund-awaiting {
        display: inline-block;
        font-size: 0.9rem;
        font-weight: bold;
        padding: 0.5rem 1rem;
        /* Consistent padding for all badges */
        border-radius: 25px;
        /* Rounded edges for consistency */
        text-align: center;
        line-height: 1.2;
        /* Vertical alignment */
    }

    .badge-delivered {
        background-color: #d4edda;
        /* Green for delivered */
        color: #155724;
        /* Text color for green */
    }

    .badge-refund-completed {
        background-color: #28a745;
        /* Slightly darker green for refund completed */
        color: white;
        /* White text for contrast */
    }

    .badge-refund-rejected {
        background-color: #dc3545;
        /* Red for rejected refunds */
        color: white;
        /* White text for rejected */
    }

    .badge-refund-awaiting {
        background-color: #ffc107;
        /* Yellow for awaiting refunds */
        color: black;
        /* Black text for visibility */
    }

    .order-items-preview {
        margin: 1rem 0;
        padding: 1rem 0;
        border-top: 1px solid #eee;
        border-bottom: 1px solid #eee;
    }

    .order-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0;
    }

    .item-name {
        flex: 1;
    }

    .item-quantity {
        margin: 0 1rem;
        color: #666;
    }

    .order-summary {
        text-align: right;
        margin-top: 1rem;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        /* Same border radius for consistency */
        font-size: 0.9rem;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }
</style>
