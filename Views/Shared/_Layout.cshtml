<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - e_commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/e_commerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        .logo-container img {
            max-height: 50px;
        }
        
        .dropdown-menu {
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            border: none;
            padding: 0.5rem 0;
        }
        
        .dropdown-item {
            padding: 0.6rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .dropdown-item:hover {
            background-color: #f8f9fa;
        }
        
        .dropdown-divider {
            margin: 0.3rem 0;
        }
        
        .user-dropdown .btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <div class="logo-container">
                        <img src="/images/bookery-logo-black.png" alt="Bookery Logo" />
                    </div>
                </a>

                <!-- Sağ taraftaki menü için -->
                <div class="d-flex align-items-center">
                    <!-- Shopping Cart -->
                    <div class="me-3">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </div>

                    <!-- User Account -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown user-dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i>
                                <span>Account</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                @if (User.IsInRole("ProductManager"))
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Product" asp-action="Index">
                                            <i class="bi bi-box"></i> Product Manager Page
                                        </a>
                                    </li>
                                }
                                else if (User.IsInRole("SalesManager"))
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Sales" asp-action="Index">
                                            <i class="bi bi-graph-up"></i> Sales Manager Page
                                        </a>
                                    </li>
                                }
                                else if (User.IsInRole("Customer"))
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="Profile">
                                            <i class="bi bi-person"></i> Profile
                                        </a>
                                    </li>
                                }
                                
                                <li>
                                    <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                                        <i class="bi bi-box-seam"></i> Orders
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="User" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div>
                            <a asp-controller="User" asp-action="Login" class="btn btn-outline-primary me-2">Login</a>
                            <a asp-controller="User" asp-action="Registration" class="btn btn-primary">Register</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Bookery
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>