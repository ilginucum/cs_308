@model IEnumerable<e_commerce.Models.Product>
@{
    ViewData["Title"] = "Product Management";
}

<style>
    .product-management-container {
        padding: 20px;
    }

    .product-management-container .top-actions {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .product-management-container .product-btn {
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 25px;
        color: #fff;
        background-color: #be3144;
        border: none;
        font-weight: bold;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .product-management-container .product-btn i {
        font-size: 1.1rem;
    }

    .product-management-container .product-btn:hover {
        background-color: #952735;
        color: #fff;
    }

    .product-management-container .product-btn:focus,
    .product-management-container .product-btn:active {
        outline: none;
        box-shadow: none;
        background-color: #952735;
        color: #fff;
    }

    .product-management-container .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        border-radius: 15px;
        overflow: hidden;
    }

    .product-management-container .table th {
        background-color: #be3144;
        color: #fff;
        text-align: center;
        padding: 10px;
    }

    .product-management-container .table td {
        text-align: center;
        padding: 10px;
        border: 1px solid #ddd;
    }

    .product-management-container .table tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .product-management-container .table tbody tr:hover {
        background-color: #f5f5f5;
    }

    .product-management-container .table td .action-buttons {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    .product-management-container h2 {
        margin-bottom: 20px;
        color: #333;
        font-weight: bold;
    }

    @@media (max-width: 768px) {
        .product-management-container .top-actions {
            flex-direction: column;
        }

        .product-management-container .table {
            display: block;
            overflow-x: auto;
            white-space: nowrap;
        }
    }
</style>

<div class="product-management-container">
    <h2>Product Management</h2>
    
    <div class="top-actions">
        <a asp-action="ManageProduct" class="product-btn">
            <i class="bi bi-plus-circle"></i> Create New Product
        </a>
        <a asp-action="ManageComments" class="product-btn">
            <i class="bi bi-chat-dots"></i> Manage Comments
        </a>
        <a asp-action="OrderManagement" class="product-btn">
            <i class="bi bi-truck"></i> Order Information
        </a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th>Serial Number</th>
                <th>Quantity in Stock</th>
                <th>Genre</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Author</td>
                    <td>@item.SerialNumber</td>
                    <td>@item.QuantityInStock</td>
                    <td>@item.Genre</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <div class="action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="product-btn">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="product-btn">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>