@model IEnumerable<e_commerce.Models.Product>

@{
    ViewData["Title"] = "Product Management";
}

<h2>Product Management</h2>

<p>
    <a asp-action="ManageProduct" class="btn btn-primary">Create New Product</a>
    <a asp-action="ManageComments" class="btn btn-primary">Manage Comments</a>
    <a asp-action="OrderManagement" class="btn btn-primary">Order Information</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Serial Number</th>
            <th>Quantity in Stock</th>
            <th>Genre</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Author</td>
                <td>@item.SerialNumber</td>
                <td>@item.QuantityInStock</td>
                <td>@item.Genre</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>