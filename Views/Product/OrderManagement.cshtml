                                        </li>
                                    }
                                </ul>

                                @if (Model.Addresses.ContainsKey(order.AddressId))
                                {
                                    var address = Model.Addresses[order.AddressId];
                                    <div class="mt-3">
                                        <h6>Shipping Details:</h6>
                                        <p class="mb-1">@address.FullName</p>
