@model IEnumerable<e_commerce.Models.Product>
@{
    ViewData["Title"] = "Sales Management";
    Layout = "_Layout";

    var productsWithoutPrice = Model.Where(p => p.Price == 0.0M);
    var productsWithPrice = Model.Where(p => p.Price > 0.0M);
}

<div class="container-fluid mt-4">
    <h2 class="page-title text-center">Sales Management</h2>

    <div class="row">
        <!-- Left Side - Products without price -->
        <div class="col-md-6 border-end">
            <div class="card custom-card">
                <div class="card-header bg-processing text-white" style="background-color: #952735;">
                    <h4 class="mb-0 text-center">Products Awaiting Price</h4>
                </div>
                <div class="card-body">
                    @if (!productsWithoutPrice.Any())
                    {
                        <div class="alert text-center text-white" style="background-color: #dc7986; border-radius: 10px;">
                            No products awaiting price setting.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table custom-table">
                                <thead>
                                    <tr>
                                        <th>Book Name</th>
                                        <th>Author</th>
                                        <th>Genre</th>
                                        <th>Stock</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in productsWithoutPrice)
                                    {
                                        <tr>
                                            <td>@product.Name</td>
                                            <td>@product.Author</td>
                                            <td>@product.Genre</td>
                                            <td>@product.QuantityInStock</td>
                                            <td>
                                                <a asp-action="SetPrice" asp-route-id="@product.Id"
                                                    class="btn custom-btn-primary btn-sm">
                                                    Set Price
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Side - Products with price -->
        <div class="col-md-6">
            <div class="card custom-card">
                <div class="card-header text-white" style="background-color: #952735;">
                    <h4 class="mb-0 text-center">Products with Price Set</h4>
                </div>
                <div class="card-body">
                    @if (!productsWithPrice.Any())
                    {
                        <div class="alert text-center text-white" style="background-color: #952735; border-radius: 10px;">
                            No products with prices set.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table custom-table">
                                <thead>
                                    <tr>
                                        <th>Book Name</th>
                                        <th>Author</th>
                                        <th>Current Price</th>
                                        <th>Discount</th>
                                        <th>Stock</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in productsWithPrice)
                                    {
                                        <tr>
                                            <td>@product.Name</td>
                                            <td>@product.Author</td>
                                            <td class="fw-bold text-black">
                                                @product.Price.ToString("C")
                                            </td>
                                            <td>
                                                <form asp-action="ApplyDiscount" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@product.Id" />
                                                    <input type="number" name="discount"
                                                        class="form-control discount-input d-inline-block" placeholder="%"
                                                        step="10" min="0" max="100" required />
                                                    <button type="submit" class="btn btn-sm apply-btn mt-1">Apply</button>
                                                </form>
                                            </td>
                                            <td>@product.QuantityInStock</td>
                                            <td>
                                                <a asp-action="SetPrice" asp-route-id="@product.Id"
                                                    class="btn custom-btn-success btn-sm">
                                                    Update Price
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .page-title {
        color: #010101;
        font-weight: bold;
    }

    .custom-card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .custom-table th {
        background-color: #be3144;
        color: white;
        text-align: center;
        padding: 10px;
    }

    .custom-table td {
        text-align: center;
        padding: 10px;
        border: 1px solid #ddd;
    }

    .btn {
        border-radius: 25px;
        font-weight: bold;
    }

    .custom-btn-primary,
    .custom-btn-success {
        background-color: #be3144;
        color: white;
    }

    .custom-btn-primary:hover,
    .custom-btn-success:hover {
        background-color: #952735;
    }

    .apply-btn {
        background-color: #be3144;
        color: white;
    }

    .apply-btn:hover {
        background-color: #952735;
    }

    .alert {
        font-size: 16px;
    }

    .discount-input {
        width: 120px;
        height: 40px;
        text-align: center;
        font-size: 16px;
        padding-right: 10px;
    }

    .discount-input::-webkit-inner-spin-button,
    .discount-input::-webkit-outer-spin-button {
        opacity: 1;
        margin: 5px;
    }
</style>
